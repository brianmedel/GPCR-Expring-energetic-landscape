RESTART
# reconstruct not based on sequence of indexes but on structure
backbone: GROUP NDX_FILE=index_whole.ndx NDX_GROUP=backbone-order
WHOLEMOLECULES ENTITY0=backbone

# Defining PATHMSD as CV
# Path.pdb contains the set of given frames
p1: PATHMSD REFERENCE=path.pdb LAMBDA=172.169549 NOPBC

# Units=nm
# Width values are based on 1/3 of the fluctuations ([SZ]value/frames) for the S and Z on an equilibration run
metad: METAD ARG=p1.sss,p1.zzz SIGMA=0.3,0.005 HEIGHT=1.2 PACE=500 GRID_MIN=0,-0.1 GRID_MAX=9,0.30 BIASFACTOR=16

UPPER_WALLS ARG=p1.zzz AT=0.2 KAPPA=50000 EXP=2 EPS=1 OFFSET=0 LABEL=uwall

PRINT ARG=p1.sss,p1.zzz,metad.bias,uwall.bias STRIDE=500 FILE=COLVAR_METAD
